@model PSIMS.Models.InventoryModel.Item

@{
    ViewBag.Title = "Delete";
}

<div class="box box-primary box-body">

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ID
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Manufacturer.ID)
            </dd>
            <dt>
                Item Code
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductCategory.CategoryName)
            </dd>

            <dt>
                Alert Qty
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AlertQty)
            </dd>


            <dt>
                Manufacturer Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Manufacturer.ManufacturerName)
            </dd>

            <dt>
                Last Updated
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastUpdated)
            </dd>

        

        </dl>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-warning btn-flat" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn bg-olive btn-flat" })
            </div>
    }
    </div>
</div>