
@model IEnumerable<PSIMS.Models.Finance.PaymentSettelmentDetails>
@{
    ViewBag.Title = "Details";
}

<div class="box box-body box-default">
    <table class="table table-striped table-responsive">
        <thead>
            <tr class="dataTableHead">
                <th>
                    Receipt Header ID
                </th>
                <th>
                    Receipt Details ID
                </th>
                <th>
                    Customer
                </th>
                <th>
                    Location
                </th>
                <th>
                    Invoice No
                </th>
                <th>
                    Invoice Date
                </th>
                <th>
                    Invoice Total
                </th>
                <th>
                    Receipt Amount
                </th>
                <th>
                    Balance
                </th>
                <th>
                    Payment Type
                </th>


                <th>
                    Status
                </th>
                <th>
                    Action
                </th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentSettelmentMasterID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CustomerID) <text>&nbsp; : &nbsp;  </text> @Html.DisplayFor(modelItem => item.Customer.CustomerName).ToString().ToUpper()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvGrandTot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitBalance)
            </td>
            <td>
                @{ if (item.PaymentType == "PP")
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:lightseagreen " class="badge" readonly>Part Payment</a>
                    }
                    else if (item.PaymentType == "FP")
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Full Payment</a>
                    }
                    else if (item.PaymentType == "BP")
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Balance Payment</a>
                    }
                }

            </td>

            <td>
                @{ if (item.Status == true)
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Active</a>
                    }
                    else
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Cancel</a>
                    }
                }

            </td>
            <td>

                <div class="dropdown">
                    <button style="background-color:#e74c3c; color:white; padding:2px 5px" class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Actions
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li>@Html.ActionLink("Edit", "EditPaymentReceiptDetails", new { id = item.ID })</li>
                    </ul>
                </div>

            </td>

        </tr>
        }


    </table>

</div>

<p>

    @Html.ActionLink("Back to List", "ReceiptHistory", null, new { @class = "btn btn-primary btn bg-olive btn-flat" })
</p>