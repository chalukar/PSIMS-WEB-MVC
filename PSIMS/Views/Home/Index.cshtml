</div>

<div class="box box-primary">
    <div class="row box-body">

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Today's Sales - Product Wise</h4>
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Item</th>
                                    <th>Des</th>
                                    <th>Count</th>
                                    <th>Total Qty</th>
                                    <th style="text-align:right">Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.todayProductCount != null)
                                {
                                    foreach (var i in (ViewBag.todayProductCount as List<PSIMS.ViewModel.SalesCountVM>))
                                    {
                                        <tr>
                                            <td>@i.ItemName.ToString().ToUpper()</td>
                                            <td>@i.Description.ToString().ToUpper()</td>
                                            <td>@i.Count</td>
                                            <td>@i.Qty</td>
                                            <td style="text-align:right"><b>@i.Amount</b></td>
                                        </tr>
                                    }

                                }



                            </tbody>
                        </table>
                        <table class="table">
                            <tr>
                                <th>Sub Total</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right">@ViewBag.todaySalesSubTot</td>
                            </tr>
                            <tr>
                                <th>Tot Discount</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right">@ViewBag.todaySalesDis</td>
                            </tr>
                            <tr>
                                <th>Tot Vat</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right">@ViewBag.todaySalesVat</td>
                            </tr>
                            <tr>
                                <th>Grand Total</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right" class="right"><b>@ViewBag.todaySales</b></td>
                            </tr>


                        </table>
                    </div>

                </div>

            </div>

        </div>
        <div class="col-md-6">
            <!--Yesterday's Sales - Product Wise-->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Yesterday's Sales - Product Wise</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Item</th>
                                    <th>Des</th>
                                    <th>Count</th>
                                    <th>Total Qty</th>
                                    <th style="text-align:right">Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.yesterdayProductCount != null)
                                {
                                    foreach (var i in (ViewBag.yesterdayProductCount as List<PSIMS.ViewModel.SalesCountVM>))
                                    {
                                        <tr>
                                            <td>@i.ItemName.ToString().ToUpper()</td>
                                            <td>@i.Description.ToString().ToUpper()</td>
                                            <td>@i.Count</td>
                                            <td>@i.Qty</td>
                                            <td style="text-align:right"><b>@i.Amount</b></td>
                                        </tr>
                                    }

                                }



                            </tbody>
                        </table>
                        <table class="table">
                            <tr>
                                <th>Sub Total</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right">@ViewBag.yesterdaySalesSubTot</td>
                            </tr>
                            <tr>
                                <th>Tot Discount</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right">@ViewBag.yesterdaySalesDis</td>
                            </tr>
                            <tr>
                                <th>Tot Vat</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right">@ViewBag.yesterdaySalesVat</td>
                            </tr>
                            <tr>
                                <th>Grand Total</th>
                                <th></th>
                                <th></th>
                                <td style="text-align:right"><b>@ViewBag.yesterdaySales</b></td>
                            </tr>


                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
</div>



