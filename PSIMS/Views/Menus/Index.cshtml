@model IEnumerable<PSIMS.Models.MenuModels>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary box-body">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-responsive" id="dataTable">
        <thead>
            <tr class="dataTableHead">
                <th>
                    ID
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MainMenuName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubMenuName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FaIconName)
                </th>
                <th></th>
            </tr>
        </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MainMenuName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubMenuName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FaIconName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MenuId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MenuId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MenuId })
                    </td>
                </tr>
            }

</table>
</div>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "order": [[1, "desc"]],
           // "pageLength": 50,    //shows default page length to be 50
            // "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
            "lengthMenu": [[50, 10, 25, 50, 100, -1], [5, 10, 25, 50, 100, "All"]]
        });
    });

</script>