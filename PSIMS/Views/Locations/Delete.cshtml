@model PSIMS.Models.Locations.Location
@using Microsoft.AspNet.Identity
@using IdentitySample.Models
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
}

<div class="box box-body box-primary">

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Location</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ID
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ID)
            </dd>

            <dt>
                Location
            </dt>

            <dd>
                @{
                    var location = Model.LocationCode + "-" + Model.LocationName;
                    @location
                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IsDefault)
            </dt>

            <dd>
                @Html.CheckBoxFor(model => model.IsDefault, new { @disabled = "disabled" })
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserID)
            </dt>

            <dd>
                @{
                    var UN = Model.UserID;
                    var name = db.Users.Where(u => u.Id == UN).FirstOrDefault().UserName ?? "n/a";
                    @name

                }

            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreateOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateOn)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-warning btn-flat" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn bg-olive btn-flat" })
            </div>
        }
    </div>
</div>