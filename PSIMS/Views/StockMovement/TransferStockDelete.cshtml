@model PSIMS.Models.InventoryModel.StockMovement

@{
    ViewBag.Title = "TransferStockDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary box-body">

    <h3>Are you sure you want to delete this?</h3>
    <p>@ViewBag.Error</p>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                ID
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt>
                Item Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Item.Name)
            </dd>

            <dt>
                Batch No
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Stock.BatchNo)
            </dd>
            <dt>
                Source
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FromLocation.LocationName)
            </dd>

            <dt>
                Destination
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ToLocation.LocationName)
            </dd>

            <dt>
                Qty
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InitQty)
            </dd>

            <dt>
                Distributed Qty
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DistributedQty)
            </dd>

            <dt>
                Remarks
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Remarks)
            </dd>

            <dt>
                Transfered By
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TransferdBy)
            </dd>

            <dt>
                Transferd On
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TransferdOn)
            </dd>

            <dt>
                Received By
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReceivedBy)
            </dd>

            <dt>
                Received On
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReceivedOn)
            </dd>

            <dt>
                Received Qty
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReceivedQty)
            </dd>

            <dt>
                Status
            </dt>

            <dd>
                @{
                    var status = Model.Status;

                    if (status.Equals(0))
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:orange " class="badge" readonly>Pending</a>
                    }
                    else if (status.Equals(1))
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:yellowgreen " class="badge" readonly>Partial</a>
                    }
                    else if (status.Equals(2))
                    {
                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Completed</a>
                    }

                }


            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning btn-flat" /> |
            @Html.ActionLink("Back to List", "TransferIndex", null, new { @class = "btn btn-primary btn bg-olive btn-flat" })
        </div>
        }
    </div>
</div>